<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BA8AC3">



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txt_weight_input"
        android:hint="@string/enter_weight_kg"
        android:textColor="#A542D6"
        android:textStyle="normal|bold"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_weight_calculate"

        android:text="@string/calculate_weight_status"
        android:textColor="#FFFFFF"
        android:textSize="18sp"

        android:layout_width="270dp"
        android:layout_height="60dp"
        android:background="@drawable/buttonsshape"
        android:shadowColor="#A542D6"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"
        tools:ignore="RtlHardcoded"
        android:layout_marginRight="5dp" />



    <TextView
        android:id="@+id/txt_weight_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="30dp"
        android:text="Body Mass Index \n\n Wait Gain for Week 40\n 58.3(55.7-61.1)\nWeight during your delivery\n(55.7-61.1)\n you are under weight"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="HardcodedText"
        android:textColor="@android:color/white" />
  </LinearLayout>
