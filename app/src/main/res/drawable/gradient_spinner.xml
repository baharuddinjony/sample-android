<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="90" android:endColor="#c9c9c9" android:startColor="#f9daf4" android:type="linear" />

            <stroke android:width="1dp" android:color="#f9f4f8" />

            <corners android:radius="4dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
        <item ><bitmap android:gravity="bottom|right" android:src="@drawable/down_arrow" />
        </item>
    </layer-list></item>

</selector>
